@model Employee
<div class="container">
    <h1 class="mt-3">Salary Calculator</h1>
    <main>
        <!--This form will take input and once submitted will return the employee's salary-->
        <form asp-action="Salary" method="post" class="  form-horizontal">
            <div class="row">
                <!--The span element is used here to add icons-->
                <label asp-for="Name" class="control-label col-sm-3"> <span class="fa-solid fa-user-tie"></span>&nbsp; Name: </label>
                <input asp-for="Name" class="form-control col-sm-3" />
            </div>
            <div class="row">
                <label class="control-label col-sm-3"> <span class="fa-solid fa-id-badge"></span>&nbsp; Employee's Title: </label>
                <input asp-for="Title" class="form-control col-sm-3" />
            </div>
            <div class="row">
                <label class="control-label col-sm-3"> <span class="fa-solid fa-sack-dollar"></span>&nbsp; Pay Rate: </label>
                <input asp-for="PayRate" class="form-control col-sm-3" />
            </div>
            <div class="row">
                <label class="control-label col-sm-3"> <span class="fa-solid fa-clock"></span>&nbsp; Hours Worked: </label>
                <input asp-for="Hours" class="form-control col-sm-3" />
            </div>
            <div class="row">
                <label class="control-label col-sm-3"> <span class="fa fa-money-bill-alt"></span>&nbsp; Salary: </label>
                <input value="@ViewBag.Salary.ToString("C2")" readonly class="form-control col-sm-3" />
            </div>
            <div class="row">
                <!--These buttons are for submitting and clearing the form-->
                <div class="col offset-sm-3 pl-0">
                    <button type="submit" class="btn btn-primary">Calculate</button>
                    <a asp-action="Salary" class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>